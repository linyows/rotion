{
  "compilerOptions": {
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "module": "ESNext",
    "declaration": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist/ui",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "emitDeclarationOnly": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/ui/**/*"
  ],
  "exclude": [
    "rollup.config.ts",
    "**/*.test.tsx",
    "**/*.stories.tsx"
  ]
}
