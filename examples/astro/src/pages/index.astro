---
import { FetchDatabase } from 'rotion';
import Header from '../components/Header';
import Table from '../components/Table';
import 'rotion/style-without-dark.css';

// Get configuration from environment variables
const apiToken = import.meta.env.NOTION_TOKEN;
const databaseId = import.meta.env.NOTION_DATABASE_ID;

// Set process.env for Rotion (it expects NOTION_TOKEN)
if (apiToken) {
  process.env.NOTION_TOKEN = apiToken;
}

let db = null;
let databaseTitle = '';
let error = null;

if (!databaseId) {
  error = 'Please set NOTION_DATABASE_ID in your .env file';
} else if (!apiToken) {
  error = 'Please set NOTION_TOKEN in your .env file';
} else {
  try {
    db = await FetchDatabase({ database_id: databaseId });
    databaseTitle = db.meta?.title?.[0]?.plain_text || 'Database';
  } catch (err) {
    error = err instanceof Error ? err.message : 'Failed to fetch Notion database';
  }
}

const description = 'This is a rotion example of the Notion database.';
const keys = ['Title', 'Tags', 'Date'];
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{databaseTitle || 'Rotion Astro Example'}</title>
    <style is:global>
      body {
        margin: 0;
        padding: 0;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      }
      .container {
        max-width: 900px;
        margin: 0 auto;
        padding: 20px;
      }
      .description {
        margin-bottom: 40px;
        color: #666;
        font-size: 16px;
      }
      .error {
        padding: 40px;
        max-width: 600px;
        margin: 0 auto;
      }
      .error h2 {
        color: #e74c3c;
        margin-bottom: 16px;
      }
      .error p {
        margin-bottom: 12px;
        line-height: 1.6;
      }
      .error ul {
        background-color: #f8f9fa;
        padding: 20px 20px 20px 40px;
        border-radius: 4px;
        margin-top: 12px;
      }
      .error li {
        margin-bottom: 8px;
        font-family: monospace;
      }
      /* Table column width styles */
      .rotion-table-column0 {
        white-space: nowrap;
        width: 100%;
      }
      .rotion-table-column0 .rotion-table-cell-inner {
        width: 100%;
      }
    </style>
  </head>
  <body>
    {error ? (
      <div class="error">
        <h2>Error</h2>
        <p>{error}</p>
        <p>
          Please check your environment variables in <code>.env</code> file:
        </p>
        <ul>
          <li>NOTION_TOKEN</li>
          <li>NOTION_DATABASE_ID</li>
        </ul>
      </div>
    ) : (
      <>
        <Header title={databaseTitle} client:load />
        <div class="container">
          <p class="description">{description}</p>
          <Table keys={keys} db={db} client:load />
        </div>
      </>
    )}
  </body>
</html>
