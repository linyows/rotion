{
  "name": "notionate",
  "version": "10.3.0",
  "license": "MIT",
  "repository": "linyows/notionate",
  "description": "This is React components that uses the Notion API to display the Notion's database and page.",
  "main": "./dist/server/index.js",
  "components": "dist/components/index.js",
  "componentsSrc": "src/components/index.ts",
  "types": "./dist/types/index.d.ts",
  "files": [
    "LICENSE",
    "README.md",
    "dist/*"
  ],
  "author": {
    "name": "Tomohisa Oda",
    "url": "https://tomohisaoda.com"
  },
  "scripts": {
    "dev": "next dev",
    "build": "npm run clean && npm run lint && npm run transpile && npm run typecheck && npm run declaration && npm run rollup && npm run components-declaration && npm run styles",
    "rollup": "rollup --config rollup.config.ts --configPlugin typescript",
    "transpile": "babel src/server -D -d dist/server --extensions '.ts,.tsx' --config-file ./babelrc.json",
    "declaration": "tsc -p ./src/tsconfig.declaration.json && mv dist/src dist/types",
    "components-declaration": "cp -r dist/types/* dist/components",
    "typecheck": "tsc -p ./src/tsconfig.typecheck.json",
    "styles": "cp -r ./src/styles ./dist/",
    "lint": "eslint ./src --ext .js,.jsx,.ts,.tsx",
    "clean": "rm -rf dist/*",
    "cacheclean": "rm -rf .cache/*",
    "export": "next build",
    "test": "tsm node_modules/uvu/bin.js test",
    "prepublishOnly": "npm install && npm run build && npm test"
  },
  "peerDependencies": {
    "@types/prismjs": "^1.26.3",
    "mermaid": "^10.6.1",
    "prismjs": "^1.25.0",
    "react": "^17.0.2 || ^18.0.0-0",
    "react-dom": "^17.0.2 || ^18.0.0-0"
  },
  "dependencies": {
    "@notionhq/client": "^2.1.1",
    "@types/imagemin": "^8.0.5",
    "@types/imagemin-webp": "^7.0.3",
    "@types/replace-ext": "^2.0.2",
    "file-type": "^18.7.0",
    "imagemin": "^8.0.1",
    "imagemin-webp": "^8.0.0",
    "replace-ext": "^2.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.5",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@next/eslint-plugin-next": "^14.0.4",
    "@rollup/plugin-babel": "^6.0.2",
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/node": "^20.10.4",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.56.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.33.2",
    "next": "^14.0.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rollup": "^3.3.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-import-css": "^3.3.5",
    "testdouble": "^3.20.1",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "tsm": "^2.3.0",
    "typescript": "^5.3.3",
    "uvu": "^0.5.6"
  }
}
